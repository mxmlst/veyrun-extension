{
  "manifest_version": 3,
  "name": "Veyrun",
  "version": "0.1.0",
  "description": "Veyrun x402 unlocker (scaffold)",
  "action": {
    "default_title": "Veyrun",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "webRequest", "tabs", "notifications", "windows"],
  "host_permissions": ["<all_urls>"],
  "options_page": "debug.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
